@import './../var.styl'
.ml-radio-item {
  font-size: $font-size;
  padding-bottom: 10px;
  padding-top: 10px;
  .ml-radio-scale-enter {
    opacity: 0;
    transform: scale(0.4);
  }
  .ml-radio-scale-leave-active {
    opacity: 0;
    transform: scale(0.4);
  }
  .ml-radio-label {
    padding-right: 10px;
    cursor: pointer;
    margin-left: 54px;
    user-select: none;
    min-height: 44px;
    line-height: 42px;
    word-break: break-all;
    word-break: break-word;
  }
  .ml-radio-icon {
    width: 44px;
    height: 44px;
    float: left;
    position: relative;
    cursor: pointer;
    .ml-radio-on {
      transition: $scale-fade-transition;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 2;
      i {
        color: $color-primary;
      }
    }
    .ml-radio-on.is-disabled {
      i {
        color: $color-aaa;
        opacity: .4;
      }
    }
    .ml-radio-no.is-disabled {
      background-color: $color-aaa
      opacity: .4;
      border-radius: 50%;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 1;
      overflow: hidden;
      i {
        display: none;
      }
    }
    i {
      font-size: 44px;
      color: $color-aaa;
      line-height: 44px;
    }
  }
}