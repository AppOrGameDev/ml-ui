@import './../var.styl'
.ml-toast {
  position: fixed;
  max-width: 80%;
  border-radius: $border-radius;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  box-sizing: border-box;
  padding: 20px;
  text-align: center;
  transition: $fade-transition
}

.ml-toast.place-bottom {
  bottom: 100px;
  left: 50%;
  transform: translate(-50%, 0)
}

.ml-toast.place-middle {
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%)
}

.ml-toast.place-top {
  top: 100px;
  left: 50%;
  transform: translate(-50%, 0)
}

.ml-toast-text {
  font-size: $font-min-size;
}
