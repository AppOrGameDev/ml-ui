.ml-pull-layout {
  position: relative;
  height: 100%;
  overflow: hidden;
}

.ml-pull {
  position: relative;
  height: 100%;
  font-size: 14px;
  .ml-pull-wrapper {
    overflow: scroll;
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    -webkit-overflow-scrolling: touch;
  }
  .ml-pull-down, .ml-pull-up {
    height: 50px;
    width: 100%;
    text-align: center;
    line-height: 50px;
    position: absolute;
    span {
      margin-left: 6px;
    }
    .ml-pd-icon {
      transition: $all-transition;
    }
    .ml-pd-load {
      width: 16px;
      height: 16px;
      position: relative;
    }
  }
  .ml-pull-up {
    top: 100%;
    left: 0;
    .ml-pd-icon {
      transform: rotate(180deg)
    }
  }
  .ml-pull-up.satisfy-up {
    .ml-pd-icon {
      transform: rotate(0deg)
    }
  }
  .ml-pull-down.satisfy-down {
    .ml-pd-icon {
      transform: rotate(180deg)
    }
  }
  .ml-pull-down {
    bottom: 100%;
    left: 0;
  }
}