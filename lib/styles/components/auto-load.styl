.ml-auto-load {
  position: relative;
  height: 100%;
  overflow: hidden;
  .ml-auto-wrapper {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    left: 0;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
  }
  .ml-auto-content {
    min-height: 100%;
  }
  .ml-auto-bottom {
    height: 40px;
    line-height: 40px;
    text-align: center;
    color: $color-prompt1;
    font-size: 14px;
    .auto-load-warp {
      width: 16px;
      height: 16px;
      position: relative;
    }
    span {
      margin-left: 4px;
    }
  }
}