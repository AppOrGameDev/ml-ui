@import './../var.styl'
.ml-slide, .ml-slide-item, .ml-slide-items-wrap {
  position: relative;
  height: 100%;
  overflow: hidden
}

.ml-slide-items-wrap .ml-slide-item {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transform: translateX(-100%);
  display: none;
}

.ml-slide-items-wrap .slide-active {
  display: block;
  transform: none;
}

.ml-slide-dots {
  z-index: 666;
  position: absolute;
  height: 20px;
  left: 50%;
  bottom: 30px;
  transform: translateX(-50%);
  .ml-slide-dot {
    width: 16px;
    height: 16px;
    display: inline-block;
    border-radius: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    margin: 0 6px;
  }
  .dot-active {
    background: #fff;
  }
}
