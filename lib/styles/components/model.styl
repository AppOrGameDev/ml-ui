@import './../var.styl'

.ml-model {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  background-color: transparent;
  z-index: 1002;
}

.ml-mask-bg {
  position: relative;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.34);
  z-index: -1;
}

.ml-mask-clarity {
  background-color: transparent;
}