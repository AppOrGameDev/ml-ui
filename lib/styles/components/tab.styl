.ml-tab {
  position: absolute;
  height: 100%;
  width: 100%;
  overflow: hidden;
  .ml-tab-item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transform: translate3d(-100%, 0, 0);
    display: none;
  }
  .tab-active {
    display: block;
    transform: none;
    z-index: 2;
  }
}

